<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notification Demo App"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/btnLocalNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trigger Local Notification"
        android:layout_below="@id/tvTitle"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnViewHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Notification History"
        android:layout_below="@id/btnLocalNotification"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnNotificationSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnViewHistory"
        android:layout_marginTop="186dp"
        android:text="Notification Settings" />

</RelativeLayout>
